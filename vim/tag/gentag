TARGET='/tmp/cscope.files'
find $1 -name "*.h" -o -name "*.cpp" -o -name "*.cc" > ${TARGET}
mycwd=`pwd`
cd $1
ctags -R *
cscope -bq -i ${TARGET}
cd ${mycwd}
